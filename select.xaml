        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Seva"
        mc:Ignorable="d"
        Title="select" Width="500" Height="340" ResizeMode="CanResize" Background="#2A2A2A" WindowStyle="None" WindowStartupLocation="CenterScreen">

    
    <Grid>
            
        <StackPanel Margin="15">
            <TextBlock Text="Select Database" Foreground="White" FontSize="20" Margin="5"/>
            <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="5" Height="250" >
                <StackPanel HorizontalAlignment="Left" Orientation="Vertical" x:Name="glavstack" Width="430">
                    
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
