<Window x:Class="Seva.TriggerBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Seva"
        mc:Ignorable="d"
        Title="TriggerBox" Height="450" Width="350" ResizeMode="NoResize" WindowStyle="None" Background="#2A2A2A">
    <Grid>
        <StackPanel>
            <ListBox x:Name="paramTriggers" Margin="10,0,10,0" Background="#2A2A2A" BorderThickness="0" Height="330"/>
            <Button Content="Cancel" HorizontalAlignment="Right" Foreground="White" Background="Transparent" BorderThickness="0"  Width="100" Margin="0,10,10,0" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
